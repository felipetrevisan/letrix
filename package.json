{
  "name": "letrix-monorepo",
  "private": true,
  "packageManager": "bun@1.3.9",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev --filter=@letrix/web",
    "dev:web": "turbo run dev --filter=@letrix/web",
    "build": "turbo run build",
    "start": "bun run --cwd apps/web start",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "check": "turbo run typecheck test",
    "format": "biome format --write .",
    "definitions:backfill": "bun run --cwd apps/web definitions:backfill",
    "supabase:import": "bun run --cwd apps/web supabase:import",
    "supabase:extract-legacy": "bun run --cwd apps/web supabase:extract-legacy",
    "words:remove-roman-numerals": "bun run --cwd apps/web words:remove-roman-numerals",
    "words:remove-vowelless": "bun run --cwd apps/web words:remove-vowelless",
    "words:build-from-snippet": "bun run --cwd apps/web words:build-from-snippet",
    "words:fetch-kkrypt": "bun run --cwd apps/web words:fetch-kkrypt",
    "words:fetch-dicionario": "bun run --cwd apps/web words:fetch-dicionario",
    "words:refresh-dicionario-definitions": "bun run --cwd apps/web words:refresh-dicionario-definitions",
    "words:refresh-wiktionary-definitions": "bun run --cwd apps/web words:refresh-wiktionary-definitions",
    "words:fetch-papalavras": "bun run --cwd apps/web words:fetch-papalavras"
  },
  "devDependencies": {
    "@biomejs/biome": "2.4.4",
    "turbo": "^2.5.6"
  }
}
